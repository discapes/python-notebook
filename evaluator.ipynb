   "source": [
    "from ipywidgets import interact\n",
    "\n",
    "@interact(f=\"5*x\", x=\"2\")\n",
    "def run(f, x):\n",
    "    if x.isdecimal():\n",
    "        y = eval(f, { \"x\": int(x) })\n",
    "        print(f\"f({x}) = {y}\")"
   ]
  }
